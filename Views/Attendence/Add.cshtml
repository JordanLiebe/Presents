@model DubAttendenceTracker.Models.Attendence
@{
    ViewData["Title"] = "Add";
}

<h2>Add</h2>

<h4>Person to Event</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add" asp-route-Event="@ViewData["Event"]">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EventId" class="control-label"></label>
                <select asp-for="EventId" asp-items="ViewBag.Events"></select>
                <span asp-validation-for="EventId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonId" class="control-label"></label>
                <select asp-for="PersonId" asp-items="ViewBag.People"></select>
                <span asp-validation-for="PersonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
