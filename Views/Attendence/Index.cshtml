@model IEnumerable<DubAttendenceTracker.Models.Attendence>
@{
    ViewData["Title"] = "Index";
}
@inject DubAttendenceTrackerContext context;

<h2>People</h2>

<p>
    <a asp-action="Add" asp-route-Event="@ViewData["Event"]">Add</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (Attendence item in Model)
        {
            Person person = context.Person.Find(item.PersonId);
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => person.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => person.LastName)
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.Id" asp-route-Event="@ViewData["Event"]">Remove</a>
            </td>
        </tr>
        }
    </tbody>
</table>

